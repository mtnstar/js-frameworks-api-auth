<div class='jumbotron loginbox'>
  <form {{action "login" on="submit"}}>
    {{input value=username type="text" id="username" class='form-control' placeholder='Username'}} <br/>
    {{input value=password type="password" id="password" class='form-control' placeholder='Password'}} <br/>
    <button class='btn btn-primary' type="submit">Login</button>
  </form>
</div>
